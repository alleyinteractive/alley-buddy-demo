<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="WP Starter Project" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
  <description>PHP_CodeSniffer standard for WP Starter Project.</description>

  <!-- Include Alley Rules -->
  <rule ref="Alley-Interactive" />

  <!--
  Pass some flags to PHPCS:
    p flag: Show progress of the run.
    s flag: Show sniff codes in all reports.
    n flag: Do not print warnings.
  -->
  <arg value="ps" />

  <!-- Whenever possible, cache the scan results and re-use those for unchanged files on the next scan. -->
  <arg name="cache" value=".phpcs/cache.json" />

  <!-- Check up to 20 files simultaneously. -->
  <arg name="parallel" value="20" />

  <!-- Set severity to 1 to see everything that isn't effectively turned off. -->
  <arg name="severity" value="1" />

  <!-- Exclude a few directories and autogenerated files. -->
  <exclude-pattern>*/**/tests/</exclude-pattern>
  <exclude-pattern>./client-mu-plugins/*/build/</exclude-pattern>
  <exclude-pattern>./client-mu-plugins/*/inc/blocks/</exclude-pattern>
  <exclude-pattern>./client-mu-plugins/*/inc/fields.php</exclude-pattern>
  <exclude-pattern>./client-mu-plugins/*/inc/post-types/</exclude-pattern>
  <exclude-pattern>./client-mu-plugins/*/inc/taxonomies/</exclude-pattern>
  <exclude-pattern>./mu-plugins/*/build/</exclude-pattern>
  <exclude-pattern>./mu-plugins/*/inc/blocks/</exclude-pattern>
  <exclude-pattern>./mu-plugins/*/inc/fields.php</exclude-pattern>
  <exclude-pattern>./mu-plugins/*/inc/post-types/</exclude-pattern>
  <exclude-pattern>./mu-plugins/*/inc/taxonomies/</exclude-pattern>
  <exclude-pattern>./plugins/*/build/</exclude-pattern>
  <exclude-pattern>./plugins/*/inc/blocks/</exclude-pattern>
  <exclude-pattern>./plugins/*/inc/fields.php</exclude-pattern>
  <exclude-pattern>./plugins/*/inc/post-types/</exclude-pattern>
  <exclude-pattern>./plugins/*/inc/taxonomies/</exclude-pattern>
  <exclude-pattern>./themes/*/inc/fields.php</exclude-pattern>
  <exclude-pattern>./themes/*/inc/post-types/</exclude-pattern>
  <exclude-pattern>./themes/*/inc/taxonomies/</exclude-pattern>
  <exclude-pattern>vendor/</exclude-pattern>

  <!-- The version set here matches the minimum version tested in .travis.yml. -->
  <config name="minimum_supported_wp_version" value="5.8" />
</ruleset>
